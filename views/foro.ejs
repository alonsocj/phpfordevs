    <!--Captura los valores por medio de una lista ordenada-->
    <div class="mainforum">
        <div class="forum">
            <% if(login !=undefined ){%>
                <form method="post" class="formforo">
                    <h1 class="titfo">Agrega un Tema!</h1>
