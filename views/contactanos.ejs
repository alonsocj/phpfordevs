<%- include("templates/head",{ruta:'/css/contac.css',title:'Contactanos'}) %>
<div class="formulario">
    <div class="contacto">
        <h3>Escribenos tus sugerencias!</h3><br/>
        <form name="formulario-contacto" method="post">
            <label for="nombre">Nombre</label>
            <input class="nombre" id="nombre" type="text" required><br/>
    
            <label for="email">Email</label>
            <input class="email" id="email" type="email" required><br/>
    
            <label for="subject">Asunto</label>
            <input class="subject" id="subject" type="text" required><br/>
    
            <label for="mensaje">Mensaje</label>
            <textarea class="mensaje" id="mensaje" required></textarea><br/>
            
            <p><button id="enviarCorreo" type="submit">Enviar</button></p>
            
        </form>
    </div>
