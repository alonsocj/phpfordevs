<%- include("templates/head",{ruta:"/css/watchvideo.css",title:video[0].titulo})%>

    <div class="container-watch">
        <div class="navcontent flex">
            <aside class="sidebar-videos">

                <ul class="nav-links">
                    <%for(let i=0 ; i< lista.length;i++){%>
                        <li class="flex">
                            <a href="/cursos/<%=lista[i].id_curso%>/videos/<%=lista[i].cod%>" class="flex">
                                <i class="fas fa-play-circle fa-3x"></i>
                                <strong class="title">
                                    <%=lista[i].cod%>.<%=lista[i].titulo%>
                                </strong>
                            </a>
                        </li>
                        <%}%>
                </ul>
            </aside>
            <section class="home-section">
                <div class="home-content"><i class="fas fa-bars"></i></div>
            </section>

        </div>
        <div class="video flex">
            <div class="watch">
                <iframe width="720" height="450" src="<%= video[0].url %>" title="YouTube video player" frameborder="0"
                    allowfullscreen></iframe>
            </div>
            <div class="video-info">
                <h1 class="videotitle">
                    <%= video[0].titulo %>
                </h1>
                <p>
                    <%= video[0].descripcion_video%>
                </p>
            </div>
            <div class="comentaries flex">
                <div class="publication">
                    <% if(login !=undefined ){%>
                        <form action="/cursos/<%=video[0].id_curso%>/videos/<%=video[0].cod%>" method="post"
                            class="formcomment">
                            <label>Comentario:</label><textarea type="text" placeholder="Comentario" id="comment"
                                name="comment" class="formatextarea"></textarea>
                            <button type="submit" class="btnComment">Comentar</button>
                        </form>
                        <%}%>
                </div>
                <div class="allcomments flex">
                    <%for(let i=0;i<comments.length;i++){%>
                        <div class="comment-user flex">
                            <div class="inforcoment">
                                <strong class="user">
                                    <%=users[i][0].username%>
                                </strong>
                            </div>
                            <p class="comentarie">
                                <%=comments[i].opinion%>
                            </p>
                            <div class="likes">
                                <p class="tipo">Likes <i class="far fa-thumbs-up"></i>
                                    <%=comments[i].megusta%>
                                </p>
                            </div>
                        </div>

                        <%}%>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/videolist.js"></script>
    <%- include("templates/footer") %>